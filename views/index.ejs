<!DOCTYPE html>
<html>
  <meta charset="utf-8" />
  <title>App</title>
  <head>
    <link type="text/css" rel="stylesheet" href="/assets/css/common.css" />
    <style>
      .container .header {
        width: 100%;
        height: 15vh;
        background: cadetblue;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .container .header h2 {
        color: white;
        font-size: 45px;
      }
      .container .body {
        height: 85vh;
        background: azure;
      }
      .input-link-crawl {
        padding-top: 20px;
        display: flex;
        justify-content: center;
      }
      .input-link-crawl input {
        height: 30px;
        width: 40vh;
      }
      .input-link-crawl button {
        height: 35px;
        margin-left: 15px;
        width: 100px;
      }
      .log-screen {
        height: 60vh;
        margin-top: 50px;
        background: darkslategrey;
      }
      .log-screen p {
        color: white;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h2>
          CRAWL TOOL
        </h2>
      </div>
      <div class="body">
        <div class="input-link-crawl">
          <input type="text" name="link-crawl" value="" />
          <button class="btn-crawl">START</button>
        </div>
        <div class="log-screen">
          <% for(var i = 0; i < 100; i++) { %>
          <p>aaaaaaaaaaaaa</p>
          <% } %>
        </div>
      </div>
      <div class="footer"></div>
    </div>
  </body>
</html>
